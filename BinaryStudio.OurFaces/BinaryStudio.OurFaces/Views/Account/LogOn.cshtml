@model BinaryStudio.OurFaces.Controllers.LogonModel
@{
    ViewBag.Title = "Sign up";
}
<div class="hero-unit form-horizontal">
    @using (Html.BeginForm())
    {
        <legend>Join <strong>Binary Studio</strong> team!</legend>
   
        <div class="offset1">
            @Html.ValidationSummary(true)
            <div class="control-group">
                <label class="control-label">
                    Username</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.UserName)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Password</label>
                <div class="controls">
                    @Html.PasswordFor(x => x.Password)
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <label class="checkbox">
                        @Html.CheckBoxFor(x => x.Remember) Remember me
                    </label>
                    <input type="submit" value="Join!" class="btn btn-warning" />
                </div>
            </div>
        </div>
    }
</div>

