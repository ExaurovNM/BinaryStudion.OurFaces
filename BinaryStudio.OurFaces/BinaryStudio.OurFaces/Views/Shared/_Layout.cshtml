<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <div class="navbar">
            <div class="navbar-inner">
                <div class="navbar_metrics">
                    @Html.ActionLink("Our Faces", "Index", "Home", null, new { @class = "brand" })
                    <div class="pull-right">
                        <div class="btn-toolbar">
                            @{
                                if (User.Identity.IsAuthenticated)
                                {
                                    <span>Hello, @User.Identity.Name!</span>
                                }
                                else
                                {
                                    @Html.ActionLink("Sign in", "Login", "Account", null, new { @class = "btn btn-small btn btn-warning" })
                                    @Html.ActionLink("Sign up", "Register", "Account", null, new { @class = "btn btn-small" })
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
    </div>
</body>
</html>
